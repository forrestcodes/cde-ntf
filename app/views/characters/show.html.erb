<div class="row justify-content-center mb-3">
  <div class="col">
    <h1><%= @character['name'] %></h1>
    <small><%= link_to 'Back', :back, class: 'btn btn-outline-primary' %></small>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-sm col-md-6">
    <img src="<%= @character['image'] %>" width="100%">
  </div>

  <div class="col-sm col-md-6">
    <ul class="list-group">
      <li class="list-group-item"><strong>Status:</strong> <%= @character['status'].presence || 'N/A' %></li>
      <li class="list-group-item"><strong>Species:</strong> <%= @character['species'].presence || 'N/A' %></li>
      <li class="list-group-item"><strong>Type:</strong> <%= @character['type'].presence || 'N/A' %></li>
      <li class="list-group-item"><strong>Gender:</strong> <%= @character['gender'].presence || 'N/A' %></li>
      <li class="list-group-item"><strong>Origin:</strong> <%= @character['origin']['name'].presence || 'N/A' %></li>
      <li class="list-group-item"><strong>Location:</strong> <%= @character['location']['name'].presence || 'N/A' %></li>
      <li class="list-group-item"><strong>Created:</strong> <%= @character['created'].presence || 'N/A' %></li>
    </ul>
  </div>
</div>