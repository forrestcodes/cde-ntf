<div class="row justify-content-center mb-3">
  <div class="col">
    <h1><%= @episode['name'] %></h1>
    <small><%= link_to 'Back', episodes_path, class: 'btn btn-outline-primary' %></small>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-sm col-md-6">
    <p class="lead">Characters in Ep.</p>

    <ul class="list-group">
      <% @characters_in_episode.each do |char| %>
        <%= link_to character_path(char['id']) do %>
          <li class="list-group-item list-group-item-action">
            <%= char['name'] %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>

  <div class="col-sm col-md-6">
    <p class="lead">Episode Details</p>
    <ul class="list-group">
      <li class="list-group-item"><strong>Air Date:</strong> <%= @episode['air_date'].presence || 'N/A' %></li>
      <li class="list-group-item"><strong>Episode:</strong> <%= @episode['episode'].presence || 'N/A' %></li>
      <li class="list-group-item"><strong>Created:</strong> <%= @episode['created'].presence || 'N/A' %></li>
    </ul>
  </div>
</div>